{
  "manifestVersion": 1,
  "executable": "g-assist-plugin-nanoleaf.exe",
  "persistent": true,
  "passthrough": true,
  "name": "nanoleaf",
  "description": "Control Nanoleaf devices.",
  "functions": [
    {
      "name": "nanoleaf_change_room_lights",
      "description": "Set the color of the Nanoleaf LEDs",
      "tags": [
        "lighting",
        "wall"
      ],
      "properties": {
        "color": {
          "type": "string",
          "description": "the color"
        }
      }
    },
    {
      "name": "nanoleaf_change_profile",
      "description": "Set a predefined lighting effect profile on the Nanoleaf device",
      "tags": [
        "lighting",
        "profile",
        "effect"
      ],
      "properties": {
        "profile": {
          "type": "string",
          "description": "the name of the profile/effect to activate"
        }
      }
    }
  ],
  "tethered": true,
  "tether_config": {
    "heartbeat_interval": 5,
    "heartbeat_timeout": 20,
    "onboarding_timeout": 60,
    "allow_passthrough": true
  }
}